---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="[ATTENTION CE N'EST PAS UN SITE OFFICIEL, SEULEMENT DES TESTS]: Le site web de l'Orgnisation des Étudiants en Informatique de Limoges ! Retrouvez nous sur ce site pour être au courant des prochains événements." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> 
		<meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="dark light">

		<title>{title}</title>

    <style>
      html, body {
        scroll-behavior: smooth;
      }
    </style>
	</head>
	<body class="font-sans bg-white text-black">
		<slot />
	</body>
  <script>
    import "locomotive-scroll/locomotive-scroll.css";
    import LocomotiveScroll from "locomotive-scroll";

    /* Locomotive scroll instance */
    const locomotiveScroll = new LocomotiveScroll();
  </script>
</html>
