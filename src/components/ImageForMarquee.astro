---
type Props = {
  src: string
  alt: string
};

const {
  src,
  alt,
} = Astro.props;
---

<img
  class="images-marquee-item object-cover h-[300px] w-auto hover:transform hover:-rotate-2 transition-all hover:border-4 hover:border-black mx-auto hover:shadow-[-8px_8px_0_#000]"
  src={src}
  alt={alt}
/>
